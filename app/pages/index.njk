<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}

{% include "partials/navigation-1.njk" %}

<div class="bg-light masterhead">
  <div class="container py-5">
    <form class="text-center" action="lista.html" method="get">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8">
          <h1 class="mb-4 wow fadeInDown" data-wow-delay="0.3s">¿Qué estás buscando?</h1>
          <div class="input-group mb-3 wow fadeInUp" data-wow-delay="0.5s">
            <input type="text" class="form-control form-control-lg" placeholder="Buscar trámites y servicios" aria-label="Buscar trámites y servicios" aria-describedby="button-addon2">
            <div class="input-group-append">
              <button class="btn btn-secondary" type="submit" id="button-addon2">
                <i class="fas fa-fw fa-lg fa-search"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<section class="py-5">
  <div class="container">
    <div class="row">

      <div class="col-12 col-md-6">
        <div class="card">
          <div class="card-body pb-0">
            <h5 class="card-title">Más Consultados</h5>
          </div>
          <ul class="list-group list-group-flush">
            {% for i in range(1,5) %}
              <li class="list-group-item">
                <a href="tramite.html">
                  <div>
                    Titulo de trámite {{ i }}
                  </div>
                  <div class="fas fa-fw fa-lg fa-angle-right"></div>
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <div class="card">
          <div class="card-body pb-0">
            <h5 class="card-title">Trámites Sugeridos</h5>
          </div>
          <ul class="list-group list-group-flush">
            {% for i in range(1,5) %}
              <li class="list-group-item">
                <a href="tramite.html">
                  <div>
                    Titulo de trámite {{ i }}
                  </div>
                  <div class="fas fa-fw fa-lg fa-angle-right"></div>
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}

{% block js %}{% endblock %}
